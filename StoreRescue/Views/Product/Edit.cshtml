@using StoreRescue.Models
@model Product
@{ ViewBag.Title = "Edit Product"; Layout = "_AdminLayout"; }




<form asp-action="Edit" method="Post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductID" />
    <div class="form-group">
        <div><span asp-validation-for="ProductName" class="text-danger"></span></div>
        <label asp-for="ProductName"></label>
        <input type="text" class="form-control" asp-for="ProductName" />
    </div>
    <div class="form-group">
        <div><span asp-validation-for="ProductDescription" class="text-danger"></span></div>
        <label asp-for="ProductDescription"></label>
        <input type="text" class="form-control" asp-for="ProductDescription" />
    </div>
    <div class="form-group">
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <label asp-for="Price"></label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <label asp-for="category"></label>
        <select class="form-control" asp-for="CategoryID" asp-items="ViewBag.CategoryList">
            <option value="">Select a Category</option>
        </select>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>
