@using StoreRescue.Models
@model Category
@{ ViewBag.Title = "Edit Category"; Layout = "_AdminLayout"; }




<form asp-action="Edit" method="Post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="CategoryID" />
    <div class="form-group">
        <div><span asp-validation-for="CategoryName" class="text-danger"></span></div>
        <label asp-for="CategoryName"></label>
        <input type="text" class="form-control" asp-for="CategoryName" />
    </div>
    <div class="form-group">
        <div><span asp-validation-for="CategoryDescription" class="text-danger"></span></div>
        <label asp-for="CategoryDescription"></label>
        <input type="text" class="form-control" asp-for="CategoryDescription" />
    </div>
   
    
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>
